<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="ui.controllers.MainDashboardController" stylesheets="@styles.css">

    <left>
        <VBox spacing="15" styleClass="sidebar">
            <!-- Logo e título -->
            <VBox alignment="CENTER" spacing="15" styleClass="logo-container">
                <SVGPath content="M12,1.25c-0.47,0-0.85,0.38-0.85,0.85v1.62C7.71,4.14,5,7.15,5,10.75c0,3.9,3.18,7.08,7.08,7.08s7.08-3.18,7.08-7.08c0-3.6-2.71-6.61-6.15-7.03V2.1c0-0.47-0.38-0.85-0.85-0.85z M12,5.25c3.03,0,5.5,2.47,5.5,5.5s-2.47,5.5-5.5,5.5s-5.5-2.47-5.5-5.5S8.97,5.25,12,5.25z"
                      styleClass="logo-icon"/>
                <Label text="PlantCare" styleClass="app-title"/>
                <Label text="Gestão de Hortas" styleClass="app-subtitle"/>
            </VBox>
            
            <Separator styleClass="menu-separator"/>
            
            <!-- Menu de navegação -->
            <ScrollPane fitToWidth="true" styleClass="menu-scroll-pane">
                <VBox spacing="12" styleClass="menu-container">
                    <!-- Seção Hortas -->
                    <Label text="HORTAS" styleClass="menu-section-label"/>
                    <Button text="📋 Listar Hortas" onAction="#showHortasList" styleClass="menu-button"/>
                    <Button fx:id="btnAdicionarHorta" text="🌱 Adicionar Horta" onAction="#showNewHorta" styleClass="menu-button"/>
                    
                    <!-- Seção Anotações -->
                    <Label text="ANOTAÇÕES" styleClass="menu-section-label"/>
                    <Button text="✏️ Adicionar Anotações" onAction="#showAddNotes" styleClass="menu-button"/>
                    <Button text="📖 Ler Anotações" onAction="#showNotes" styleClass="menu-button"/>
                    
                    <!-- Seção Gestão -->
                    <Label text="GESTÃO" styleClass="menu-section-label"/>
                    <Button text="🌾 Colheita" onAction="#showColheita" styleClass="menu-button"/>
                    <Button text="🌤️ Previsão do tempo" onAction="#showPrevisaotempo" styleClass="menu-button"/>
                </VBox>
            </ScrollPane>
            
            <Region VBox.vgrow="ALWAYS"/> <!-- Espaçador flexível -->
            
            <Separator styleClass="menu-separator"/>
            
            <!-- Área do usuário e botão sair -->
            <VBox spacing="10" styleClass="user-area">
                <Button text="🚪 Sair" onAction="#handleLogout" styleClass="logout-button"/>
            </VBox>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <!-- Área de conteúdo principal -->
            <VBox alignment="CENTER" spacing="20" styleClass="welcome-container">
                <Label text="Bem-vindo ao PlantCare" styleClass="welcome-title"/>
                <Label text="Selecione uma opção no menu para começar" styleClass="welcome-subtitle"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>