        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 15 0 0 0;">
            <Button text="Entrar" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-pref-width: 120; -fx-pref-height: 40; -fx-font-weight: bold; -fx-background-radius: 5;"/>
