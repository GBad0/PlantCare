<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="ui.controllers.LoginController" 
      spacing="20" 
      alignment="CENTER" 
      style="-fx-padding: 40; -fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);">

    <!-- CabeÃ§alho -->
    <VBox alignment="CENTER" spacing="10">
        <!-- <Label text="ðŸŒ±" style="-fx-font-size: 36;"/> -->
        <Label text="PlantCare" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2e8b57;"/>
        <Label text="Sua Horta Inteligente" style="-fx-font-size: 14; -fx-text-fill: #555;"/>
    </VBox>

    <!-- FormulÃ¡rio -->
    <VBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 30; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-min-width: 350; -fx-max-width: 750;">
        
        <Label text="Acesso ao Sistema" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 0 0 10 0;"/>
        
        <VBox spacing="8">
            <Label text="UsuÃ¡rio" style="-fx-font-size: 14; -fx-text-fill: #555;"/>
            <TextField fx:id="txtUsuario" promptText="Digite seu usuÃ¡rio" style="-fx-font-size: 14; -fx-pref-height: 40; -fx-pref-width: 300;"/>
        </VBox>
        
        <VBox spacing="8">
            <Label text="E-mail" style="-fx-font-size: 14; -fx-text-fill: #555;"/>
            <TextField fx:id="txtEmail" promptText="Digite seu e-mail" style="-fx-font-size: 14; -fx-pref-height: 40; -fx-pref-width: 300;"/>
        </VBox>
        
        <VBox spacing="8">
            <Label text="Tipo de Acesso" style="-fx-font-size: 14; -fx-text-fill: #555;"/>
