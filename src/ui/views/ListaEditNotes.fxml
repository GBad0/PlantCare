<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="ui.controllers.EditarAnotacaoController"
      spacing="20" 
      style="-fx-padding: 30; -fx-background-color: linear-gradient(to bottom, #f5f7fa, #e4e8eb);">

    <!-- Cabeçalho -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="✏️" style="-fx-font-size: 32;"/>
        <Label text="Editar Anotação" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
        <Label text="Modifique os detalhes da anotação" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
        <Separator style="-fx-background-color: #ddd; -fx-padding: 10 0 0 0;"/>
    </VBox>

    <!-- Formulário -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 0);">
        <Label text="Título" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
        <TextField fx:id="txtTitulo" promptText="Digite o título da anotação" 
                  style="-fx-pref-height: 35; -fx-font-size: 14;"/>

        <Label text="Descrição" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
        <TextArea fx:id="txtDescricao" promptText="Digite a descrição detalhada" 
                  wrapText="true" prefRowCount="4" 
                  style="-fx-font-size: 14;"/>

        <Label text="Horta" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
        <ComboBox fx:id="cbHorta" promptText="Selecione a horta" 
                  style="-fx-pref-height: 35; -fx-font-size: 14;"/>

        <Label text="Autor" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
        <TextField fx:id="txtAutor" promptText="Digite o nome do autor" 
                  style="-fx-pref-height: 35; -fx-font-size: 14;"/>

        <Label text="Data" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
        <DatePicker fx:id="datePicker" promptText="Selecione a data" 
                    style="-fx-pref-height: 35; -fx-font-size: 14;"/>
    </VBox>

    <!-- Botões -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancelar" onAction="#handleCancelar" 
                style="-fx-background-color: #9e9e9e; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 5;"/>
        <Button text="Salvar" onAction="#handleSalvar" defaultButton="true"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 5;"/>
    </HBox>
</VBox> 