<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.effect.*?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="ui.controllers.ListaAnotacoesController"
      spacing="25" 
      alignment="TOP_CENTER" 
      style="-fx-padding: 35; -fx-background-color: linear-gradient(to bottom, #f5f7fa, #e4e8eb);">

    <!-- Cabeçalho -->
    <VBox alignment="CENTER" spacing="10">
        <HBox alignment="CENTER" spacing="15">
            <Label text="📝" style="-fx-font-size: 32;"/>
            <VBox alignment="CENTER_LEFT">
                <Label text="Lista de Anotações" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
                <Label text="Visualize e gerencie as anotações das hortas" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
            </VBox>
        </HBox>
        <Separator style="-fx-background-color: #ddd; -fx-padding: 5 0 5 0;" maxWidth="1000"/>
    </VBox>

    <!-- Área de Pesquisa e Filtros -->
    <HBox spacing="10" alignment="CENTER_LEFT" maxWidth="1000">
        <TextField fx:id="txtPesquisa" promptText="Pesquisar anotações..." 
                  style="-fx-font-size: 14; -fx-pref-height: 35; -fx-pref-width: 300;"/>
        <ComboBox fx:id="cbFiltroHorta" promptText="Filtrar por horta" 
                  style="-fx-font-size: 14; -fx-pref-height: 35;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Nova Anotação" onAction="#handleNovaAnotacao"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-pref-height: 35; -fx-background-radius: 5;">
            <graphic>
                <Label text="+" style="-fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;"/>
            </graphic>
        </Button>
    </HBox>

    <!-- Tabela -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 0);" maxWidth="1000">
        <TableView fx:id="tabelaAnotacoes" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <stylesheets>
                <URL value="@styles.css"/>
            </stylesheets>
            <columns>
                <TableColumn fx:id="colTitulo" text="Título" prefWidth="200" style="-fx-font-size: 14; -fx-alignment: CENTER_LEFT;"/>
                <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="300" style="-fx-font-size: 14; -fx-alignment: CENTER_LEFT;"/>
                <TableColumn fx:id="colHorta" text="Horta" prefWidth="150" style="-fx-font-size: 14; -fx-alignment: CENTER;"/>
                <TableColumn fx:id="colAutor" text="Autor" prefWidth="150" style="-fx-font-size: 14; -fx-alignment: CENTER;"/>
                <TableColumn fx:id="colData" text="Data" prefWidth="150" style="-fx-font-size: 14; -fx-alignment: CENTER;"/>
            </columns>
            <placeholder>
                <Label text="Nenhuma anotação encontrada" style="-fx-text-fill: #666;"/>
            </placeholder>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <!-- Rodapé com botões -->
    <HBox spacing="15" alignment="CENTER_RIGHT" maxWidth="1000">
        <Button text="Excluir" onAction="#handleExcluir" 
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 5;"/>
        <Button text="Editar" onAction="#handleEditar" 
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 5;"/>
        <Button text="Atualizar" onAction="#handleAtualizar" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 5;"/>
    </HBox>
</VBox>