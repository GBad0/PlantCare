<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      spacing="10" style="-fx-padding: 20;">
    
    <Label text="Adicionar Anotações" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Titulo: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField promptText="Ex: Problemas com pragas" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Descrição: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField promptText="Descrição" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Autor: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField promptText="Nome do Autor" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <Label text="Horta: " GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField promptText="Nome da horta" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <ComboBox promptText="Selecione" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    </GridPane>
    
